---
import { joinClasses } from '../utils/joinClasses'
import { FontAwesomeIcon } from '@fortawesome/react-fontawesome'
import { faChevronDown } from '@fortawesome/free-solid-svg-icons'
import { replaceUrls } from '../utils/replaceUrls'

interface Props {
  classes: string
  styles: string
  label: string
  url: string
}
const {classes, styles, label, url} = Astro.props;
const href= replaceUrls(url, Astro.url.host);


---
<li class={joinClasses(classes, "group relative")} style={styles}>
  <a href={href}>{label} <FontAwesomeIcon className='text-xs pl-1' icon={faChevronDown} /> </a>
  <ul class="hidden group-hover:block absolute top-full text-right whitespace-nowrap bg-event-horizon py-2 [&_a]:block [&_a]:px-4 [&_a]:py-2">
    <slot />
  </ul>

</li>
